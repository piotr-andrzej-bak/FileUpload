@{
    ViewData["Title"] = "Home Page";

}
<div class="container">
    <h4 class="text-center col-12 py-4 lead">Signle file upload</h4>

    <div class="p-3">
        <div class="col-12 text-center">
            <form asp-controller="Home" asp-action="SingleFile" enctype="multipart/form-data" method="post">
                <div class="mx-auto">
                    <div class="form-group">
                        <label class="text-info pb-3 lead">Select a file</label><br />
                        <input class="form-control px-5" type="file" name="file" />
                    </div>
                    <br />
                    <button class="btn btn-info" type="submit">Submit</button>
                    <br />
                    <span class="link-danger">@TempData["Error"]</span>
                </div>
            </form>
        </div>
    </div>
</div>
